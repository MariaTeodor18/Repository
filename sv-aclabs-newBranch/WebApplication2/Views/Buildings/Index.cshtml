@model WebApplication2.Models.City
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table style=" border: 1px, solid, black; border-collapse: collapse;">
    <tr>
        <th>Type</th>
        <th>Level</th>
        <th>Action</th>

    </tr>
@foreach (var building in this.Model.Buildings)
{

    <tr>
        @{
            if (building.BuildingType == null)
            {
                 <td>Empty</td>
                 <td>@(building.Level)</td>
                 <td>@Html.ActionLink("Build", "Build", new { buildingId = building.BuildingId })</td>
            }
            else
            {

                <td>@(building.BuildingType.Name)</td>
                <td>@(building.Level)</td>
                <td>@Html.ActionLink("Build", "Build", new { buildingId = building.BuildingTypeId })</td>
                }
            }
    </tr>
}
</table>